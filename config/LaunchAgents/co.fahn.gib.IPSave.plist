<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>co.fahn.gib.IPSave</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/zsh</string>
        <string>-cx</string>
        <string>
          dig -6 TXT +short o-o.myaddr.l.google.com @ns1.google.com | tr -d '"' > "$HOME/Library/Mobile Documents/com~apple~CloudDocs/Fahns/Gib/coding/IPs/$(hostname).ipv6"
        </string>
    </array>

    <key>StandardErrorPath</key>
    <string>/var/log/co.fahn.gib.IPSave.log</string>
    <key>StandardOutPath</key>
    <string>/var/log/co.fahn.gib.IPSave.log</string>

    <key>RunAtLoad</key>
    <true/>
    <key>StartInterval</key>
    <integer>600</integer>

</dict>
</plist>
