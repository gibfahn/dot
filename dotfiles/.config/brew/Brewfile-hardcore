brew "bash-completion"                   # Generally useful bash completions.
brew "bat"                               # Nicer cat with syntax highlighting etc.
brew "binutils"                          # GNU versions of tools for interacting with binaries (nm, strings etc).
brew "broot"                             # Interactive version of "tree".
brew "buildifier"                        # Bazel code formatter.
brew "ccache"                            # Speeds up C/C++ recompilation.
brew "dfu-programmer"                    # QMK dependency used for flashing my Ergodox Infinity.
brew "dfu-util"                          # QMK dependency used for flashing my Ergodox Infinity.
brew "diffutils"                         # GNU versions of diff and related tools.
brew "exercism"                          # Learn coding languages.
brew "findutils"                         # GNU versions of find, locate, updatedb, xargs.
brew "fswatch"                           # See which files are opened on the system (`fswatch /`).
brew "gawk"                              # GNU versions of awk.
brew "gdub"                              # Wrapper around ./gradlew for gradle projects (gw).
brew "gh"                                # New GitHub CLI (will eventually replace hub).
brew "git-lfs"                           # Git Large File Storage. Use with `git lfs`.
brew "gnu-tar"                           # GNU version of tar.
brew "gnu-time"                          # GNU version of time.
brew "gnu-which"                         # GNU version of which.
brew "gnutls"                            # Provides gnutls-cli for setting up TLS connections.
brew "go"                                # Go progamming language.
brew "graphviz"                          # Gives you the `dot` tool for generating diagrams.
brew "grep"                              # GNU version of grep.
brew "httpie"                            # Alternative to curl, `http` binary.
brew "hub"                               # GitHub CLI tool.
brew "hyperfine"                         # Benchmark commands (time but a benchmarking suite).
brew "ipython"                           # Interactive python shell.
brew "jq"                                # Makes it easy to deal with JSON on the command line.
brew "kubectx"                           # Easily change Kubernetes context or namespace.
brew "kubernetes-cli"                    # Manage your docker clusters with kube.
brew "llvm"                              # Gives clangd (clang language server).
brew "make"                              # GNU version of make.
brew "postgresql"                        # Solid database.
brew "protobuf"                          # Serialization format.
brew "pstree"                            # Hierarchical tree of processes, `pstree -g 3`.
brew "pv"                                # Show data flow through bash pipes.
brew "ruby-build"                        # Helper to install ruby versions.
brew "shellcheck"                        # Linter for bash.
brew "speedtest-cli"                     # Check network speed from the command-line.
brew "tokei"                             # Counts lines of code in a project.
brew "watch"                             # Rerun a command every n seconds.
brew "wget"                              # Alternative to curl for downloading files.

# Brew formulae from taps.

brew "bazelbuild/tap/bazelisk"           # Easily use the latest version of bazel.
brew "bazelbuild/tap/buildozer"          # Automatically apply fixes to bazel files.

